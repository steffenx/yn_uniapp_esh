
.content {
	background: #f6f6f6;
	height: 93vh;
	color: #828a88;
	font-size: 15px;
}
.binding_body{
	width: 94%;
	margin: 0 auto;
}
.empty{
	height: 10px;
}
.header_ic{
	background: #ffffff;
	border-radius: 10px;
	margin-bottom: 30rpx;
	width: 100%;
	height: 100%;
	border: 1px solid #f3f1f1;
	-webkit-box-shadow:1px 1px 1px #f3f1f1;
	        box-shadow:1px 1px 1px #f3f1f1;
}
.top_name{
	padding-left: 30rpx;
	padding-top: 30rpx;
}
.top_input{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	border-bottom: 1px solid #b5b0b0;
	margin: 30rpx;
	margin-bottom: 50rpx;
}
.btn_bd{
	margin-bottom: 20px;
}
.btn_binding{
	border-radius: 20px;
}
.hint_info{
	display: block;
	margin-top: 15rpx;
	margin-bottom: 15rpx;
}
.blank{
	color: #333333;
}

